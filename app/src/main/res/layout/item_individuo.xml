<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_individuo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_individuo_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@color/colorAccent"
            tools:layout_editor_absoluteY="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_individuo_divisor_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_individuo_numero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Árv. - 01" />

        <View
            android:id="@+id/item_individuo_divisor_1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_individuo_numero" />

        <TextView
            android:id="@+id/item_individuo_dap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/item_individuo_numero"
            app:layout_constraintTop_toBottomOf="@id/item_individuo_divisor_1"
            tools:text="DAP:" />

        <TextView
            android:id="@+id/item_individuo_dapnumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/item_individuo_numero"
            app:layout_constraintTop_toBottomOf="@id/item_individuo_divisor_1"
            tools:text="23.4 cm" />

        <TextView
            android:id="@+id/item_individuo_altura_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Altura:"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/item_individuo_dap"
            app:layout_constraintTop_toBottomOf="@id/item_individuo_dap" />

        <TextView
            android:id="@+id/item_individuo_altura_totalnumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="17.2 m"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/item_individuo_dapnumero"
            app:layout_constraintTop_toBottomOf="@id/item_individuo_dapnumero" />

        <View
            android:id="@+id/item_individuo_divisor_2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_individuo_altura_total" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>