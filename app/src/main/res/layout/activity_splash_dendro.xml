<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B24CAF50"
    android:orientation="vertical"
    tools:context=".ui.activity.main.splash.SplashDendroActivity">

    <ImageView
        android:id="@+id/imagem_dendro"
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dendro_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imagem_dendro"
        app:layout_constraintStart_toStartOf="@+id/imagem_dendro"
        app:layout_constraintTop_toBottomOf="@+id/imagem_dendro" />

</androidx.constraintlayout.widget.ConstraintLayout>