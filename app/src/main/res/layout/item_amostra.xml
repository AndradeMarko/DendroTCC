<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_amostra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_amostra_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@color/colorAccent"
            tools:layout_editor_absoluteY="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_amostra_divisor_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_amostra_numero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Parcela F-03" />

        <View
            android:id="@+id/item_amostra_divisor_1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_amostra_numero" />

        <TextView
            android:id="@+id/item_amostra_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/item_amostra_divisor_1"
            app:layout_constraintTop_toBottomOf="@id/item_amostra_divisor_1"
            tools:text="20/03/2020" />

        <TextView
            android:id="@+id/item_amostra_individuos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="44 IndivÃ­duos"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/item_amostra_data"
            app:layout_constraintTop_toBottomOf="@id/item_amostra_data" />

        <View
            android:id="@+id/item_amostra_divisor_2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_amostra_individuos" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>